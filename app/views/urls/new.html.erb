<body>


<%= form_for @url, html: {class: 'form'} do |f| %>
  <img class="mb-4" src="/images/tiny_url.png" alt="" width="72" height="72">
  <h1 class="h3 mb-3 font-weight-normal">Please Enter URL</h1>
  <label for="long_url" class="sr-only">long URL</label>
  <%= f.text_field (:long_url), html: {class: ''}, required: true, autofocus: true %>

  <% if @url.errors.messages[:long_url] %>
    <% @url.errors.messages[:long_url].each do |value| %>
      <%= value %>
    <% end %>
  <% end %>
  <div class="checkbox mb-3">
  </div>
  <button class="btn btn-lg btn-primary btn-block" type="submit">Submit</button>
<% end %>
</body>

</html>